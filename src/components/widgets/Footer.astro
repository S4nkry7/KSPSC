---
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

export interface Props {
  footNote?: string;
  theme?: string;
}

const { footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="relative w-full text-center mx-auto px-4 sm:px-6 dark:text-slate-300">
    <div class="grid py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <div class="font-courier">
          <a class="inline-block font-bold text-xl">kluchnik sánchez perete, s.c. <br>
            contadores públicos certificados <Fragment set:html={footNote} /></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
